{% extends 'base.j2' %}
{% block content %}
  <div class="container col-3 mt-2">
    <h2>{{ username }}'s Products</h2>
      {% for product in products %}
        <a href="{{ url_for('view_product', product_id=product['product_id']) }}" style="color: black; text-decoration: none;">
          <div class="card btn-outline-dark" style="width: 7.3rem;">
            <p class="card-header">{{ product['name'] }}</p>
            <div class="card-body">
              <p>{{ product['amount'] }}{{ product['unit'] }}</p>
              <p>{{ product['cost'] }}</p>
            </div>
          </div>
        </a>
      {% endfor %}
      <a href="{{ url_for('add_product') }}"><button class="btn btn-primary">New Product</button></a>
  </div>
{% endblock %}