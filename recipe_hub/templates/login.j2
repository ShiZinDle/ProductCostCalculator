{% extends 'base.j2' %}
{% block content %}
  <div class="container col col-sm-8 col-md-6 col-lg-5 col-xl-4 mt-3">
    <legend class="h2 text-center">Login</legend>
    <form method="POST" action="">
      {{ form.hidden_tag() }}
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          {{ form.email.label(class='font-weight-bold input-group-text') }}
        </div>
        {% if form.email.errors %}
          {{ form.email(class='form-control is-invalid') }}
          <div class="invalid-feedback">
            {% for error in form.email.errors %}
              {{ error }}
            {% endfor %}
          </div>
        {% else %}
          {{ form.email(class='form-control') }}
        {% endif %}
      </div>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          {{ form.password.label(class='font-weight-bold input-group-text') }}
        </div>
        {% if form.password.errors %}
          {{ form.password(class='form-control is-invalid') }}
          <div class="invalid-feedback">
            {% for error in form.password.errors %}
              {{ error }}
            {% endfor %}
          </div>
        {% else %}
          {{ form.password(class='form-control') }}
        {% endif %}
      </div>
      {{ form.remember }}
      {{ form.remember.label }}
      <div class="mb-2">
        {{ form.submit(class='btn btn-outline-primary') }}
      </div>
    </form>
    <p class="text-muted">Don't have a user? <a href="{{ url_for('register') }}">Sign up</a>.</p>
  </div>
{% endblock %}
